{
    "welcomeFile": "/index.html",
    "authenticationMethod": "route",
    "routes": [
        {
            "source": "^(.*)$",
            "target": "$1",
            "service": "html5-apps-repo-rt",
            "csrfProtection": true,
            "authenticationType": "xsuaa",
            "scope": {
                "GET": [
                    "$XSAPPNAME.customize"
                ],
                "POST": [
                    "$XSAPPNAME.customize"
                ],
                "PUT": [
                    "$XSAPPNAME.customize"
                ],
                "DELETE": [
                    "$XSAPPNAME.customize"
                ],
                "default": "$XSAPPNAME.customize"
            }
        }
    ]
}