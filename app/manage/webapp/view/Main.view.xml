<mvc:View controllerName="manage.controller.Main" xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core" xmlns:tnt="sap.tnt">
	<App id="app">
		<pages>
			<Page showHeader="true" showSubHeader="false" showFooter="true">
				<customHeader>
					<tnt:ToolHeader>
						<core:Icon src="sap-icon://sap-ui5" size="2.2rem"/>
						<Title text="{i18n>jaggeryTitle}" level="H2"
							titleStyle="H2" class="sapUiTinyMarginTopBottom" />
						<ToolbarSpacer/>
					</tnt:ToolHeader>
				</customHeader>
				<content>
					<l:BlockLayout background="Default">
						<l:BlockLayoutRow>
							<l:BlockLayoutCell class="sapUiNoContentPadding">
								<Image src="./img/lecture.jfif" width="100%" height="100%"/>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
						<l:BlockLayoutRow>
							<l:BlockLayoutCell
								backgroundColorSet="ColorSet11" backgroundColorShade="ShadeD">
								<l:VerticalLayout>
									<core:Icon src="sap-icon://account" size="2.5rem"
										color="Default" />
									<Title text="{i18n>personsTitle}" level="H3"
										titleStyle="H2" class="sapUiTinyMarginTopBottom" />
									<Text text="{i18n>personsDesc}"
										class="sapUiTinyMarginBottom" />
									<Link text="{i18n>accessTool}" press="onLinkPress" id="personLink"/>
								</l:VerticalLayout>
							</l:BlockLayoutCell>
							<l:BlockLayoutCell
								backgroundColorSet="ColorSet11" backgroundColorShade="ShadeB">
								<l:VerticalLayout>
									<core:Icon src="sap-icon://learning-assistant"
										size="2.5rem" color="Default" />
									<Title text="{i18n>lectorsTitle}" level="H3"
										titleStyle="H2" class="sapUiTinyMarginTopBottom" />
									<Text text="{i18n>lectorsDesc}"
										class="sapUiTinyMarginBottom" />
									<Link text="{i18n>accessTool}" press="onLinkPress" id="lectorLink"/>
								</l:VerticalLayout>
							</l:BlockLayoutCell>
							<l:BlockLayoutCell
								backgroundColorSet="ColorSet11" backgroundColorShade="ShadeD">
								<l:VerticalLayout>
									<core:Icon src="sap-icon://study-leave" size="2.5rem"
										color="Default" />
									<Title text="{i18n>studentsTitle}" level="H3"
										titleStyle="H2" class="sapUiTinyMarginTopBottom" />
									<Text text="{i18n>studentsDesc}"
										class="sapUiTinyMarginBottom" />
									<Link text="{i18n>accessTool}" press="onLinkPress" id="studentLink"/>
								</l:VerticalLayout>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
						<l:BlockLayoutRow>
							<l:BlockLayoutCell
								backgroundColorSet="ColorSet11" backgroundColorShade="ShadeA">
								<l:VerticalLayout>
									<core:Icon src="sap-icon://group" size="2.5rem"
										color="Default" />
									<Title text="{i18n>seriesTitle}" level="H3"
										titleStyle="H2" class="sapUiTinyMarginTopBottom" />
									<Text text="{i18n>seriesDesc}"
										class="sapUiTinyMarginBottom" />
									<Link text="{i18n>accessTool}" press="onLinkPress" id="seriesLink"/>
								</l:VerticalLayout>
							</l:BlockLayoutCell>
							<l:BlockLayoutCell
								backgroundColorSet="ColorSet11" backgroundColorShade="ShadeC">
								<l:VerticalLayout>
									<core:Icon src="sap-icon://date-time" size="2.5rem"
										color="Default" />
									<Title text="{i18n>studiesTitle}" level="H3"
										titleStyle="H2" class="sapUiTinyMarginTopBottom" />
									<Text text="{i18n>studiesDesc}"
										class="sapUiTinyMarginBottom" />
									<Link text="{i18n>accessTool}" press="onLinkPress" id="studyLink"/>
								</l:VerticalLayout>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
						<l:BlockLayoutRow>
							<l:BlockLayoutCell class="sapUiNoContentPadding" 
								backgroundColorSet="ColorSet11" backgroundColorShade="ShadeB">
								<l:VerticalLayout>
								</l:VerticalLayout>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
					</l:BlockLayout>
				</content>
				<footer>
					<tnt:ToolHeader>
					</tnt:ToolHeader>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>